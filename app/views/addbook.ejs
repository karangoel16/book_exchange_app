<!DOCTYPE html>
<%include layout%>
<script src="/public/js/image.js"></script>
<script>
$(document).ready(function(){
	$('#image').change(function(){
		var d = new Date();
		$('#image_val').attr("src",$('#image').val());
	});
	$('#ISBN').change(function(){
		var val=$('#ISBN').val();
		$.ajax({
			url:'/searchISBN',
			method:"POST",
			data:{ISBN:val},
			success:function(data)
			{
				if(data)
				{
					alert("Book exists in database and have been added to your account");
				}
			},
			error:function(err){
				console.log(err);
			}
		});
	});
});
</script>
<body>
	<div class="jumbotron">
		<form action="/addbook" method="post">
			<input type="text" placeholder="ISBN" name="ISBN" id=
			"ISBN" class="form-control" required><br>
			<input type="text" placeholder="Book name" name="book" class="form-control" required><br>
			<img width="100" height="100" id="image_val" onerror="imgError(this);"><br>
			<input type="text" placeholder="Link" id="image" name="Link" class="form-control" required><br>
			<input type="submit" class="btn btn-primary">
		</form>
	</div>
</body>